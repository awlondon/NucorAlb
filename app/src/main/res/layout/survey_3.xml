<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anticorruption.SurveyPopUpActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/question"
        android:text="How would you rate your overall experience?"
        android:textSize="30dp"
        android:layout_below="@id/tool_bar"
        android:padding="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/seekBar"
        android:max="10"
        android:progress="5"
        android:splitTrack="true"
        android:layout_below="@id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="@dimen/feedBigText"
        android:text="very
poor"
        android:layout_marginLeft="@dimen/frame_inner_padding"
        android:layout_below="@id/seekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="@dimen/feedBigText"
        android:text="neutral"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/seekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="@dimen/feedBigText"
        android:text="very
good"
        android:layout_marginRight="@dimen/frame_inner_padding"
        android:layout_alignParentRight="true"
        android:layout_below="@id/seekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/finishButton"
        android:text="finish"
        android:layout_below="@id/seekBar"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>