<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anticorruption">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PRIVILEGED" />

    <uses-feature android:glEsVersion="0x00020000" android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/nucoralb_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StoryPopUpActivity"
            android:label="nucorAlb"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddStoryActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ForumActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ProfileActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WikiActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ThreadPopUpActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".InstitutionPopUpActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SurveyPopUpActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WikiPopUpActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddInstitutionActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ThreadPostEditActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".InstitutionsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.anticorruption.MainActivity" />
        </activity>
    </application>

</manifest>
